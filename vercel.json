{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "astro",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-XSS-Protection",
          "value": "1l mode=block"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-DNS-Prefetch-Control",
          "value": "on"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=63072000; includeSubDomains; preload"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/youtube",
      "destination": "https://youtube.com/AtilaIO",
      "permanent": false
    },
    {
      "source": "/subscribe",
      "destination": "https://www.youtube.com/AtilaIO?sub_confirmation=1",
      "permanent": false
    },
    {
      "source": "/mastodon",
      "destination": "https://mas.to/@atila",
      "permanent": false
    },
    {
      "source": "/twitter",
      "destination": "https://twitter.com/AtilaFassina",
      "permanent": false
    },
    {
      "source": "/x",
      "destination": "https://twitter.com/AtilaFassina",
      "permanent": false
    },
    {
      "source": "/linkedin",
      "destination": "https://linkedin.com/in/AtilaFassina",
      "permanent": false
    },
    {
      "source": "/smashingmag",
      "destination": "https://smashingmagazine.com/author/atila-fassina",
      "permanent": false
    },
    {
      "source": "/github",
      "destination": "https://github.com/atilafassina",
      "permanent": false
    },
    {
      "source": "/bsky",
      "destination": "https://bsky.app/profile/atila.io",
      "permanent": false
    },
    {
      "source": "/bluesky",
      "destination": "https://bsky.app/profile/atila.io",
      "permanent": false
    },
    {
      "source": "/gde",
      "destination": "https://g.dev/atilaf",
      "permanent": false
    },
    {
