      "permanent": false
    },
    {
      "source": "/workshops",
      "destination": "https://atila.io/talks",
      "permanent": false
    },
    {
      "source": "/workshop",
      "destination": "https://atila.io/talks",
      "permanent": false
    }
  ]
}
