---
import "~/global.css";
import Navigation from "../components/navigation.astro";
import Footer from "../components/social-footer.astro";
import "@fontsource/jost/variable.css";
import type { Props as MetaProps } from "~/components/metas.astro";
import Metas from "~/components/metas.astro";
import MenuMobile from "~/components/menu-mobile.astro";

export type Props = {
  metas: MetaProps["metas"];
};

const { metas } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <Metas metas={metas} />
  </head>
  <body
    class="grid-rows-[auto_1fr_auto] animate-bkg-move grid min-h-screen text-white font-sans"
  >
    <Navigation />
    <MenuMobile />
    <main
      class="grid place-items-center mb-32 text-left animate-blur-in font-light"
    >
      <slot />
    </main>
    <Footer />
  </body>
</html>
